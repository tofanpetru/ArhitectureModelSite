@{ ViewData["Title"] = "Home Page"; }

<div class="container">
    <div class="row">
        <div class="col-10">
            <partial name="_AllBooksPartial" />
        </div>
        <div class="col-2">
            <h3>Filters</h3>
            <hr />
            <p>Authors</p>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search">
            </form>
            <br />
            <p>Genres</p>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search">
            </form>
            <br />
            <p>Languages</p>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search">
            </form>
            <br />
            <p>Status</p>
            <div class="form-check">
                <div class="custom-control custom-checkbox">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckFree">
                    <label class="form-check-label" for="flexCheckFree">
                        Free
                    </label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckBusy">
                    <label class="form-check-label" for="flexCheckBusy">
                        Busy
                    </label>
                </div>
            </div>
            <br />
            <p>Popularity</p>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
}